<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="10dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Set Security Question"
                android:textAlignment="center"
                android:textColor="@color/purple_700"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="In case you forget your PIN, you must use this question to recover access."
                android:textAlignment="center"
                android:textColor="@color/text_hint"
                android:textSize="14sp"
                android:layout_marginBottom="24dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Question:"
                android:textColor="@color/text_dark"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />

            <!-- Replaced AutoCompleteTextView with highly interactive RadioGroup -->
            <RadioGroup
                android:id="@+id/rgQuestions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <RadioButton
                    android:id="@+id/rbQuestion1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="What is your mother's maiden name?"
                    android:paddingVertical="8dp"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/rbQuestion2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="What city were you born in?"
                    android:paddingVertical="8dp"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/rbQuestion3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="What was your first pet's name?"
                    android:paddingVertical="8dp"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/rbQuestion4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="What is your favorite book?"
                    android:paddingVertical="8dp"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/rbCustom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="✏️ Write your own custom question..."
                    android:paddingVertical="8dp"
                    android:textSize="16sp"
                    android:textColor="@color/purple_700"
                    android:textStyle="bold|italic" />
            </RadioGroup>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layoutCustomQuestion"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Custom Question"
                android:visibility="gone"
                android:layout_marginBottom="16dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etCustomQuestion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Your Answer"
                android:layout_marginBottom="24dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etAnswer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSaveQuestion"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Save Security Settings"
                android:textSize="16sp"
                app:cornerRadius="8dp" />

        </LinearLayout>
    </ScrollView>
</androidx.cardview.widget.CardView>
